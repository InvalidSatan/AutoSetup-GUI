{
  "Application": {
    "Version": "3.0.0",
    "Name": "University Auto Setup",
    "Organization": "Appalachian State University"
  },

  "Branding": {
    "UniversityBlue": "#003399",
    "ActionBlue": "#0078d7",
    "SuccessGreen": "#107C10",
    "WarningYellow": "#FF8C00",
    "ErrorRed": "#D13438",
    "LogoPath": "Resources/Images/appstate_logo.png",
    "ContactEmail": "guillra@appstate.edu",
    "ContactName": "Alex Guill"
  },

  "Logging": {
    "LocalPath": "C:\\Temp\\UniversityAutoSetup\\Logs",
    "NetworkPath": "P:\\UniversityAutoSetup\\Logs",
    "FolderPattern": "{ServiceTag}_{ComputerName} - {Date:yyyy-MM-dd}",
    "RetentionDays": 90,
    "LogLevel": "Information"
  },

  "DellCommandUpdate": {
    "InstallerUNC": "\\\\server\\share\\Dell\\DCU\\DCU_Setup.exe",
    "InstallerLocalName": "DCU_Setup.exe",
    "InstallPaths": [
      "C:\\Program Files\\Dell\\CommandUpdate\\dcu-cli.exe",
      "C:\\Program Files (x86)\\Dell\\CommandUpdate\\dcu-cli.exe"
    ],
    "ConfigureArgs": "/configure -silent -autoSuspendBitLocker=enable -userConsent=disable",
    "ScanArgs": "/scan -outputLog=\"{LogPath}\"",
    "UpdateArgs": "/applyUpdates -forceUpdate -reboot=disable -outputLog=\"{LogPath}\"",
    "MaxRetries": 3,
    "RetryDelaySeconds": 10,
    "ExitCodes": {
      "Retryable": [5, 7, 8],
      "NoUpdates": 1,
      "Success": [0, 2, 3]
    }
  },

  "GroupPolicy": {
    "ForceArgument": "/force",
    "MaxRetries": 2,
    "RetryDelaySeconds": 10
  },

  "SCCM": {
    "RepairOnFailure": true,
    "ActionTimeoutSeconds": 120,
    "Actions": [
      { "Name": "Machine Policy Retrieval", "ID": "{00000000-0000-0000-0000-000000000021}" },
      { "Name": "Machine Policy Evaluation", "ID": "{00000000-0000-0000-0000-000000000022}" },
      { "Name": "Hardware Inventory", "ID": "{00000000-0000-0000-0000-000000000001}" },
      { "Name": "Software Updates Scan", "ID": "{00000000-0000-0000-0000-000000000113}" },
      { "Name": "Software Updates Deployment", "ID": "{00000000-0000-0000-0000-000000000108}" }
    ]
  },

  "ImageChecks": {
    "MinDiskSpaceGB": 20,
    "RequiredDomainSuffix": ".appstate.edu",
    "BitLockerRequired": true
  },

  "UI": {
    "DefaultTheme": "Light",
    "EnableDarkMode": true,
    "EnableAnimations": true,
    "AutoExpandTaskDetails": false
  }
}
