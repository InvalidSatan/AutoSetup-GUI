<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Colors -->
    <!-- Keeps App State Gold (#FFCC00) as accent, inverts backgrounds -->

    <!-- UI Primary Colors (App State brand adapted for dark) -->
    <Color x:Key="UniversityBlueColor">#FFCC00</Color>
    <Color x:Key="UniversityGoldColor">#FFCC00</Color>
    <Color x:Key="ActionBlueColor">#FFCC00</Color>
    <Color x:Key="ActionBlueHoverColor">#E6B800</Color>

    <!-- Neutral Colors (inverted for dark theme) -->
    <Color x:Key="BackgroundColor">#1E1E1E</Color>
    <Color x:Key="SurfaceColor">#2D2D2D</Color>
    <Color x:Key="BorderColor">#404040</Color>
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#B0B0B0</Color>
    <Color x:Key="TextDisabledColor">#666666</Color>

    <!-- Status Colors (same as light, work well on dark) -->
    <Color x:Key="SuccessGreenColor">#69AA61</Color>
    <Color x:Key="WarningYellowColor">#D7A527</Color>
    <Color x:Key="ErrorRedColor">#C6602A</Color>
    <Color x:Key="InfoBlueColor">#03659C</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="AppStateGoldBrush" Color="#FFCC00"/>
    <SolidColorBrush x:Key="AppStateBlackBrush" Color="#010101"/>
    <SolidColorBrush x:Key="UniversityBlueBrush" Color="{StaticResource UniversityBlueColor}"/>
    <SolidColorBrush x:Key="UniversityGoldBrush" Color="{StaticResource UniversityGoldColor}"/>
    <SolidColorBrush x:Key="ActionBlueBrush" Color="{StaticResource ActionBlueColor}"/>
    <SolidColorBrush x:Key="ActionBlueHoverBrush" Color="{StaticResource ActionBlueHoverColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessGreenColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningYellowColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorRedColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoBlueColor}"/>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>

    <!-- Status Background Brushes (darker versions for dark theme) -->
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#1D3D1A"/>
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#3D3520"/>
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="#3D2520"/>
    <SolidColorBrush x:Key="PendingBackgroundBrush" Color="#3D3D3D"/>

    <!-- Window/Navigation Colors for Dark Theme -->
    <Color x:Key="WindowBackgroundColor">#1E1E1E</Color>
    <Color x:Key="NavigationBackgroundColor">#252525</Color>
    <Color x:Key="ContentBackgroundColor">#2D2D2D</Color>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="NavigationBackgroundBrush" Color="{StaticResource NavigationBackgroundColor}"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="{StaticResource ContentBackgroundColor}"/>

    <!-- Additional UI Brushes for Dark Theme -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#252525"/>
    <SolidColorBrush x:Key="OverlayBackgroundBrush" Color="#C0000000"/>
    <SolidColorBrush x:Key="CardInnerBrush" Color="#383838"/>
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="#1A3A50"/>

</ResourceDictionary>
