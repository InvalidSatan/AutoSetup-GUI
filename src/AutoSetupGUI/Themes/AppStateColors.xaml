<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Appalachian State University Official Brand Colors -->
    <!-- Primary: App State Gold (#FFCC00) and Black (#010101) -->
    <!-- Source: https://uc.appstate.edu/brand-identity-guide/identity-guide/colors -->

    <Color x:Key="AppStateGoldColor">#FFCC00</Color>
    <Color x:Key="AppStateBlackColor">#010101</Color>
    <Color x:Key="AppStateDarkGoldColor">#D7A527</Color>

    <!-- Secondary Accent Colors from Brand Guide -->
    <Color x:Key="AppStateLakeBlueColor">#03659C</Color>
    <Color x:Key="AppStateStoneColor">#D5C99A</Color>
    <Color x:Key="AppStateGrassGreenColor">#69AA61</Color>
    <Color x:Key="AppStateBrickOrangeColor">#C6602A</Color>
    <Color x:Key="AppStateDarkGrayColor">#4C4847</Color>

    <!-- UI Primary Colors (using App State brand) -->
    <Color x:Key="UniversityBlueColor">#010101</Color>
    <Color x:Key="UniversityGoldColor">#FFCC00</Color>
    <Color x:Key="ActionBlueColor">#010101</Color>
    <Color x:Key="ActionBlueHoverColor">#333333</Color>

    <!-- Status Colors (using brand-appropriate colors) -->
    <Color x:Key="SuccessGreenColor">#69AA61</Color>
    <Color x:Key="WarningYellowColor">#D7A527</Color>
    <Color x:Key="ErrorRedColor">#C6602A</Color>
    <Color x:Key="InfoBlueColor">#03659C</Color>

    <!-- Neutral Colors -->
    <Color x:Key="BackgroundColor">#F5F5F5</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="BorderColor">#E0E0E0</Color>
    <Color x:Key="TextPrimaryColor">#010101</Color>
    <Color x:Key="TextSecondaryColor">#4C4847</Color>
    <Color x:Key="TextDisabledColor">#B2B3B3</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="AppStateGoldBrush" Color="{StaticResource AppStateGoldColor}"/>
    <SolidColorBrush x:Key="AppStateBlackBrush" Color="{StaticResource AppStateBlackColor}"/>
    <SolidColorBrush x:Key="UniversityBlueBrush" Color="{StaticResource UniversityBlueColor}"/>
    <SolidColorBrush x:Key="UniversityGoldBrush" Color="{StaticResource UniversityGoldColor}"/>
    <SolidColorBrush x:Key="ActionBlueBrush" Color="{StaticResource ActionBlueColor}"/>
    <SolidColorBrush x:Key="ActionBlueHoverBrush" Color="{StaticResource ActionBlueHoverColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessGreenColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningYellowColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorRedColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoBlueColor}"/>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>

    <!-- Status Background Brushes -->
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#E8F5E8"/>
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#FFF8E1"/>
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="#FFEBE8"/>
    <SolidColorBrush x:Key="PendingBackgroundBrush" Color="#F0F0F0"/>

</ResourceDictionary>
