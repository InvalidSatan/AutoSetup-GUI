<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- App State University Brand Colors -->
    <Color x:Key="UniversityBlueColor">#003399</Color>
    <Color x:Key="UniversityGoldColor">#FFD700</Color>
    <Color x:Key="ActionBlueColor">#0078D7</Color>
    <Color x:Key="ActionBlueHoverColor">#106EBE</Color>

    <!-- Status Colors -->
    <Color x:Key="SuccessGreenColor">#107C10</Color>
    <Color x:Key="WarningYellowColor">#FF8C00</Color>
    <Color x:Key="ErrorRedColor">#D13438</Color>
    <Color x:Key="InfoBlueColor">#0078D4</Color>

    <!-- Neutral Colors -->
    <Color x:Key="BackgroundColor">#F5F5F5</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="BorderColor">#E0E0E0</Color>
    <Color x:Key="TextPrimaryColor">#1A1A1A</Color>
    <Color x:Key="TextSecondaryColor">#666666</Color>
    <Color x:Key="TextDisabledColor">#A0A0A0</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="UniversityBlueBrush" Color="{StaticResource UniversityBlueColor}"/>
    <SolidColorBrush x:Key="UniversityGoldBrush" Color="{StaticResource UniversityGoldColor}"/>
    <SolidColorBrush x:Key="ActionBlueBrush" Color="{StaticResource ActionBlueColor}"/>
    <SolidColorBrush x:Key="ActionBlueHoverBrush" Color="{StaticResource ActionBlueHoverColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessGreenColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningYellowColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorRedColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoBlueColor}"/>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>

    <!-- Status Background Brushes -->
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#DFF6DD"/>
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#FFF4CE"/>
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="#FDE7E9"/>
    <SolidColorBrush x:Key="PendingBackgroundBrush" Color="#F0F0F0"/>

</ResourceDictionary>
