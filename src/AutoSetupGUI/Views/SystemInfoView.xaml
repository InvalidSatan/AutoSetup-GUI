<Page x:Class="AutoSetupGUI.Views.SystemInfoView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="System Information"
      Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Page Header -->
            <DockPanel Margin="0,0,0,20">
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button x:Name="BtnCopy" Content="Copy to Clipboard" Style="{StaticResource SecondaryButtonStyle}"
                            Click="BtnCopy_Click" Margin="0,0,8,0"/>
                    <Button x:Name="BtnRefresh" Content="Refresh" Style="{StaticResource SecondaryButtonStyle}"
                            Click="BtnRefresh_Click"/>
                </StackPanel>
                <TextBlock Text="System Information" Style="{StaticResource HeaderTextStyle}" VerticalAlignment="Center"/>
            </DockPanel>

            <!-- Asset Information -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Asset Information" Style="{StaticResource SubheaderTextStyle}" Foreground="{StaticResource UniversityBlueBrush}" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Service Tag:" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtServiceTag" Text="--" Margin="0,0,20,12"/>

                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Computer Name:" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" x:Name="TxtComputerName" Text="--" Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Manufacturer:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtManufacturer" Text="--" Margin="0,0,20,0"/>

                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Model:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" x:Name="TxtModel" Text="--"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- BIOS Information -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="BIOS" Style="{StaticResource SubheaderTextStyle}" Foreground="{StaticResource UniversityBlueBrush}" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Version:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" x:Name="TxtBiosVersion" Text="--" Margin="0,0,20,0"/>

                        <TextBlock Grid.Column="2" Text="Release Date:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="3" x:Name="TxtBiosDate" Text="--"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Operating System -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Operating System" Style="{StaticResource SubheaderTextStyle}" Foreground="{StaticResource UniversityBlueBrush}" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" x:Name="TxtOSName" Text="--" Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Version:" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtOSVersion" Text="--" Margin="0,0,20,12"/>

                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Build:" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" x:Name="TxtOSBuild" Text="--" Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Architecture:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtOSArch" Text="--" Margin="0,0,20,0"/>

                        <TextBlock Grid.Row="2" Grid.Column="2" Text="Last Boot:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="2" Grid.Column="3" x:Name="TxtLastBoot" Text="--"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Network Information -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Network" Style="{StaticResource SubheaderTextStyle}" Foreground="{StaticResource UniversityBlueBrush}" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Ethernet MAC:" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtEthernetMac" Text="--" Margin="0,0,20,12"/>

                        <TextBlock Grid.Row="0" Grid.Column="2" Text="WiFi MAC:" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" x:Name="TxtWifiMac" Text="--" Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Domain:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtDomain" Text="--" Margin="0,0,20,0"/>

                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Domain Joined:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" x:Name="TxtDomainJoined" Text="--"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Hardware -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Hardware" Style="{StaticResource SubheaderTextStyle}" Foreground="{StaticResource UniversityBlueBrush}" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Processor:" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtProcessor" Text="--" Margin="0,0,0,12" TextWrapping="Wrap"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Cores:" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtCores" Text="--" Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Total RAM:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtRAM" Text="--"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Storage -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Storage" Style="{StaticResource SubheaderTextStyle}" Foreground="{StaticResource UniversityBlueBrush}" Margin="0,0,0,16"/>
                    <ItemsControl x:Name="DiskList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding DriveLetter}" FontWeight="SemiBold"/>
                                    <ProgressBar Grid.Column="1" Value="{Binding UsedPercentage}" Minimum="0" Maximum="100"
                                                 Height="16" Margin="0,0,12,0" Style="{StaticResource ModernProgressBarStyle}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding FreeSpaceFormatted}" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="{Binding TotalSizeFormatted}" HorizontalAlignment="Right" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- SCCM Client -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="SCCM Client" Style="{StaticResource SubheaderTextStyle}" Foreground="{StaticResource UniversityBlueBrush}" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Installed:" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtSCCMInstalled" Text="--" Margin="0,0,20,12"/>

                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Version:" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" x:Name="TxtSCCMVersion" Text="--" Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Site Code:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtSCCMSiteCode" Text="--" Margin="0,0,20,0"/>

                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Management Point:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" x:Name="TxtSCCMMP" Text="--"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
