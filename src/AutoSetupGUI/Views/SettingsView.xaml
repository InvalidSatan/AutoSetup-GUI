<Page x:Class="AutoSetupGUI.Views.SettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Settings"
      Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Page Header -->
            <TextBlock Text="Settings" Style="{DynamicResource HeaderTextStyle}" Margin="0,0,0,20"/>

            <!-- Application Info -->
            <Border Style="{DynamicResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Application" Style="{DynamicResource SubheaderTextStyle}" Foreground="{DynamicResource UniversityBlueBrush}" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtVersion" Text="2.1.0" Margin="0,0,0,8" Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Organization:" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Appalachian State University" Margin="0,0,0,8" Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Contact:" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtContact" Text="Alex Guill (guillra@appstate.edu)" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Log Settings -->
            <Border Style="{DynamicResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Logging" Style="{DynamicResource SubheaderTextStyle}" Foreground="{DynamicResource UniversityBlueBrush}" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Local Path:" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtLocalPath" Text="C:\Temp\UniversityAutoSetup\Logs"
                                   TextWrapping="Wrap" Margin="0,0,0,8" Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Network Path:" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtNetworkPath" Text="P:\UniversityAutoSetup\Logs"
                                   TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Dell Command Update Settings -->
            <Border Style="{DynamicResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Dell Command Update" Style="{DynamicResource SubheaderTextStyle}" Foreground="{DynamicResource UniversityBlueBrush}" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Installer Path:" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtDCUPath" Text="\\server\share\Dell\DCU\DCU_Setup.exe"
                                   TextWrapping="Wrap" Margin="0,0,0,8" Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Max Retries:" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtMaxRetries" Text="3" Margin="0,0,0,8" Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Retry Delay:" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtRetryDelay" Text="10 seconds" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- SCCM Settings -->
            <Border Style="{DynamicResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="SCCM Client" Style="{DynamicResource SubheaderTextStyle}" Foreground="{DynamicResource UniversityBlueBrush}" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Action Timeout:" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtActionTimeout" Text="120 seconds" Margin="0,0,0,8" Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Repair on Failure:" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtRepairOnFailure" Text="Yes" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Image Check Settings -->
            <Border Style="{DynamicResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Image Checks" Style="{DynamicResource SubheaderTextStyle}" Foreground="{DynamicResource UniversityBlueBrush}" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Min Disk Space:" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtMinDiskSpace" Text="20 GB" Margin="0,0,0,8" Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="BitLocker Required:" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtBitLockerRequired" Text="Yes" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Keyboard Shortcuts -->
            <Border Style="{DynamicResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Keyboard Shortcuts" Style="{DynamicResource SubheaderTextStyle}" Foreground="{DynamicResource UniversityBlueBrush}" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="F5" FontFamily="Consolas" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Refresh data" Margin="0,0,0,8" Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Ctrl+A" FontFamily="Consolas" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Run all selected tasks" Margin="0,0,0,8" Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Ctrl+C" FontFamily="Consolas" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Copy system info to clipboard" Margin="0,0,0,8" Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Ctrl+S" FontFamily="Consolas" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Export/save logs" Margin="0,0,0,8" Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Ctrl+Q" FontFamily="Consolas" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="Quit application" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
