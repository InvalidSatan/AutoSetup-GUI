<Page x:Class="AutoSetupGUI.Views.DashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Dashboard"
      Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="0">
            <!-- Page Title -->
            <TextBlock Text="Dashboard" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,20"/>

            <!-- System Summary Card -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="System Summary" Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Service Tag:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtServiceTag" Text="Loading..." Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Computer Name:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtComputerName" Text="Loading..." Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Ethernet MAC:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtEthernetMac" Text="Loading..." Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="WiFi MAC:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtWifiMac" Text="Loading..." Margin="0,0,0,8"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Hardware" Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,16"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Manufacturer:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtManufacturer" Text="Loading..." Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Model:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtModel" Text="Loading..." Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="OS:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtOS" Text="Loading..." Margin="0,0,0,8" TextWrapping="Wrap"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="SCCM Client:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TxtSCCM" Text="Loading..." Margin="0,0,0,8"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Quick Status Cards -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Task Status Card -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Tasks" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock x:Name="TxtTaskStatus" Text="Ready to run" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Image Checks Card -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Image Checks" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock x:Name="TxtImageChecks" Text="Not run yet" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Dell Updates Card -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="8,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Dell Updates" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock x:Name="TxtDellStatus" Text="Checking..." Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Logs Card -->
                <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Log Location" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock x:Name="TxtLogLocation" Text="Initializing..." Foreground="{StaticResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Get Started Section -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Get Started" Style="{StaticResource SubheaderTextStyle}" Margin="0,0,0,12"/>
                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,16">
                        Run the complete setup to update Group Policy, execute SCCM client actions,
                        install Dell updates, and verify the image configuration.
                    </TextBlock>
                    <Button x:Name="BtnStartSetup" Content="Start Complete Setup" Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalAlignment="Left" Click="BtnStartSetup_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
