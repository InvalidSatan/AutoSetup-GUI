<Window x:Class="AutoSetupGUI.Views.PdfViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setup Report"
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#010101" Padding="20,16">
            <DockPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button x:Name="BtnOpenExternal" Content="Open in Default App"
                            Click="BtnOpenExternal_Click" Margin="0,0,10,0"
                            Padding="16,8" Background="#FFCC00" Foreground="#010101"
                            FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"/>
                    <Button x:Name="BtnOpenFolder" Content="Open Folder"
                            Click="BtnOpenFolder_Click"
                            Padding="16,8" Background="#333333" Foreground="White"
                            FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="University Auto Setup Report" FontSize="18"
                               FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="TxtFilePath" Text="" FontSize="12"
                               Foreground="#CCCCCC" Margin="0,4,0,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- PDF Content - using WebBrowser with Edge WebView2 fallback -->
        <Grid Grid.Row="1">
            <!-- WebBrowser for PDF viewing -->
            <WebBrowser x:Name="PdfBrowser" Visibility="Collapsed"/>

            <!-- Fallback message when PDF can't be displayed -->
            <Border x:Name="FallbackPanel" Background="White" Padding="40" Visibility="Visible">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="64"
                               Foreground="#FFCC00" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Report Generated Successfully" FontSize="24"
                               FontWeight="Bold" Foreground="#010101" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtReportInfo" Text="" FontSize="14"
                               Foreground="#666666" HorizontalAlignment="Center" Margin="0,16,0,0"
                               TextWrapping="Wrap" MaxWidth="500" TextAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                        <Button x:Name="BtnViewReport" Content="View Report"
                                Click="BtnOpenExternal_Click"
                                Padding="24,12" Background="#FFCC00" Foreground="#010101"
                                FontWeight="Bold" FontSize="14" BorderThickness="0" Cursor="Hand"
                                Margin="0,0,10,0"/>
                        <Button x:Name="BtnViewFolder" Content="Open Report Folder"
                                Click="BtnOpenFolder_Click"
                                Padding="24,12" Background="#010101" Foreground="White"
                                FontWeight="SemiBold" FontSize="14" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>

                    <TextBlock x:Name="TxtHint"
                               Text="Tip: If the report opens in Edge with setup prompts, click 'Skip for now' or install a PDF reader like Adobe Acrobat Reader."
                               FontSize="11" Foreground="#999999" HorizontalAlignment="Center"
                               Margin="0,30,0,0" TextWrapping="Wrap" MaxWidth="450" TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer with restart button -->
        <Border Grid.Row="2" x:Name="RestartPanel" Background="#FFF4CE" Padding="20,16" Visibility="Collapsed">
            <DockPanel>
                <Button DockPanel.Dock="Right" x:Name="BtnRestartNow" Content="Restart Now"
                        Click="BtnRestartNow_Click"
                        Padding="24,12" Background="#C6602A" Foreground="White"
                        FontWeight="Bold" FontSize="14" BorderThickness="0" Cursor="Hand"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="&#xE7BA; Restart Required" FontFamily="Segoe MDL2 Assets, Segoe UI"
                               FontSize="16" FontWeight="Bold" Foreground="#C6602A"/>
                    <TextBlock Text="Some updates require a system restart to complete installation."
                               FontSize="13" Foreground="#333333" Margin="0,4,0,0"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
