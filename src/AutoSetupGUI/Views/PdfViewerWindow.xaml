<Window x:Class="AutoSetupGUI.Views.PdfViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setup Complete"
        Height="320" Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Success Icon and Title -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="48"
                       Foreground="#69AA61" HorizontalAlignment="Center"/>
            <TextBlock Text="Setup Complete" FontSize="22"
                       FontWeight="Bold" Foreground="#010101" HorizontalAlignment="Center" Margin="0,12,0,0"/>
        </StackPanel>

        <!-- Report Info -->
        <TextBlock Grid.Row="1" x:Name="TxtReportInfo"
                   Text="Report saved successfully."
                   FontSize="13" Foreground="#666666"
                   HorizontalAlignment="Center" Margin="0,16,0,0"
                   TextWrapping="Wrap" TextAlignment="Center"/>

        <!-- Restart Warning (if needed) -->
        <Border Grid.Row="2" x:Name="RestartPanel" Background="#FFF4CE"
                CornerRadius="6" Padding="12" Margin="0,16,0,0" Visibility="Collapsed">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets"
                           FontSize="16" Foreground="#C6602A" VerticalAlignment="Center"/>
                <TextBlock Text="Restart required to complete updates"
                           FontSize="13" Foreground="#C6602A" FontWeight="SemiBold"
                           Margin="8,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="BtnOpenReport" Content="Open Report"
                    Click="BtnOpenReport_Click"
                    Padding="20,10" Background="#FFCC00" Foreground="#010101"
                    FontWeight="SemiBold" FontSize="13" BorderThickness="0" Cursor="Hand"
                    Margin="0,0,8,0"/>
            <Button x:Name="BtnOpenFolder" Content="Open Folder"
                    Click="BtnOpenFolder_Click"
                    Padding="20,10" Background="#E0E0E0" Foreground="#333333"
                    FontWeight="SemiBold" FontSize="13" BorderThickness="0" Cursor="Hand"
                    Margin="0,0,8,0"/>
            <Button x:Name="BtnClose" Content="Close"
                    Click="BtnClose_Click"
                    Padding="20,10" Background="#010101" Foreground="White"
                    FontWeight="SemiBold" FontSize="13" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
